<Window x:Class="JFG.Comptes.DB_TableHelpers.ShowCreateTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="showCreateTable" Height="290" Width="485" ResizeMode="NoResize" ShowInTaskbar="False" Background="{DynamicResource BlueFlashBlack}" Loaded="WindowLoaded">
    <Grid>
        <Label Content="Tables :" Foreground="White" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboTables" HorizontalAlignment="Left" Margin="153,19,0,0" VerticalAlignment="Top" Width="181" SelectionChanged="CboTablesSelectionChanged"/>
        <TextBox x:Name="tbxShowCreate" HorizontalAlignment="Stretch" Height="152" Margin="0,64,0,0" Width="Auto" VerticalAlignment="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Fermer" HorizontalAlignment="Stretch" Margin="0,230,0,0" VerticalAlignment="Top" Width="Auto" Name="btnClose" Click="BtnCloseClick" Style="{DynamicResource JAUNE}" Height="23"/>
        

    </Grid>
</Window>
