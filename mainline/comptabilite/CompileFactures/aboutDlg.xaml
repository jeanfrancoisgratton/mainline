<Window x:Class="JFG.Comptes.AboutDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="aboutDlg" Height="280" Width="650" Background="{DynamicResource BlueFlashBlack}" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnClose" Content="Fermer" HorizontalAlignment="Stretch" Margin="0,210,0,0" VerticalAlignment="Top" Width="Auto" Style="{DynamicResource JAUNE}" Height="30" Click="btnClose_Click"/>
        <TextBox x:Name="tbChangelog" Foreground="White" HorizontalAlignment="Stretch" Height="180" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="Auto" Background="{x:Null}" IsUndoEnabled="False" TextOptions.TextFormattingMode="Display" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>

    </Grid>
</Window>
