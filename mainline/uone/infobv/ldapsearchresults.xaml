<Window x:Class="uOne.infoBV.ldapsearchResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ldapsearchResults" Height="450" Width="600" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" ShowInTaskbar="False">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.963,0.183" StartPoint="0.017,0.677">
            <GradientStop Color="#FF84B8E5" Offset="0.3"/>
            <GradientStop Color="Black" Offset="0.7"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Résultats :" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="312" HorizontalAlignment="Stretch" Margin="0,45,0,0" Name="tbResults" VerticalAlignment="Top" Width="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Opacity="0.75" />
        <Button Content="Fermer" Height="30" HorizontalAlignment="Stretch" Margin="0,370,0,0" Name="btnClose" VerticalAlignment="Top" Width="Auto" Style="{StaticResource GelButton}" Click="btnClose_Click" />
    </Grid>
</Window>
